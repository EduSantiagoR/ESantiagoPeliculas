*@
@{
}
<h2 class="text-center">Peliculas</h2>
<hr />
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Cards.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
    <div class="align-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAll","Pelicula",new{page = ViewBag.Page - 1})">Anterior</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAll","Pelicula",new{page = 1})">1</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAll","Pelicula",new{page = 2})">2</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAll","Pelicula",new{page = 3})">3</a></li>
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAll","Pelicula",new{page = ViewBag.Page + 1})">Siguiente</a></li>
            </ul>
        </nav>
    </div>
    <div class="row">
        @foreach (Pelicula pelicula in Model.Peliculas)
        {
            <div class="col s12 m7">
                <div class="card" style="width:100%;height:100%">
                    <div class="card-image">
                        <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/@pelicula.poster_path" style="width:100%">
                    </div>
                    <div class="card-content">
                        <span class="card-title text-decoration-underline">@pelicula.title</span>
                        <div style="width:200px;height:150px;overflow:auto">
                            <p>@pelicula.overview</p>
                        </div>
                    </div>
                    <div class="card-action">
                        <a class="btn" href="@Url.Action("FavoritoAddDelete","Pelicula",new {idPelicula=pelicula.id, isFavorite = true})">Agregar a favoritos</a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

